{
  "name": "dungeon-crawler",
  "version": "1.0.0",
  "description": "4-Player Dungeon Crawler Game",
  "main": "index.js",
  "scripts": {
    "start": "docker-compose up",
    "build": "docker-compose build",
    "dev": "docker-compose up --build",
    "test": "npm run test:backend && npm run test:profile-api",
    "test:backend": "cd server && npm test",
    "test:profile-api": "cd client && npm test",
    "test:frontend": "cd client/game-client && npm test",
    "test:profile-client": "cd client/profile-client && npm test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "npm run test:backend -- --coverage && npm run test:profile-api -- --coverage",
    "test:all": "npm run test && npm run test:e2e",
    "test:server": "npm run test:backend",
    "test:client": "npm run test:profile-api"
  },
  "keywords": ["dungeon", "crawler", "multiplayer", "game"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "jest": "^29.7.0",
    "@playwright/test": "^1.48.2"
  }
}

